<p id="notice"><%= notice %></p>

<h1>Templates</h1>

<table class='table'>
  <thead>
    <tr>
      <th>DDC</th>
      <th>Name</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= link_to template.ddc, template %></td>
        <td><%= template.name %></td>
        <td><%= template.template %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path, class: 'btn btn-info' %>
